clear;
clear all;
bits = [0 1 0 0 1 1 1 0];
nbits = length(bits);
arriba = false;
valTrans = [];
% Verificamos si hay transici√≥n al principio
if bits(1) == 0
   transicion = [-1 1];
   arriba = true;
else 
   transicion = [-1 1];
end
valTrans = [ valTrans transicion];

for i = 2 : nbits
    if bits(i) == 0
        tran = [valTrans(i - 1) valTrans(i)];
    else
        tran = - [valTrans(i - 1) valTrans(i)];
    end
    valTrans = [ valTrans tran];
end



